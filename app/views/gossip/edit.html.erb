<center>
  <div class="card bg-light"   style="width: 30rem;">
  <div class="card-body">
    <h3>Editer le gossip</h3>
 <br>
 <div class="container col-md-8 order-md-1" >
<%= form_for @gossip do |f| %>
<div class="form-group">
  <label for="">Titre du gossip</label>
  <%= f.text_field :title , class: 'form-control' %>
</div>

<div class="form-group">
  <label>Contenu du gossip</label>
  <%= f.text_field :content , class: 'form-control' %>
</div>

  <div class="form-group">
    <button class="btn btn-secondary" type="submit" name="button">Modifier le gossip</button>
  </div>
<%end %>
</div>
</div>
</div>
</center>
