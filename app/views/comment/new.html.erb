

<br><br><br>

<center>
<div class="card bg-light" style="width: 30rem;"  >
<div class="card-body">

<h4><p>Poster un commentaire</p></h4>
<br>

<div class="container col-md-8 order-md-1" >
  <%= form_tag url_for(action: 'create'), method: "post" do %>
     <div class="form ">
           <%= label_tag 'Message' %>
           <%= text_area_tag 'content', @content, class: "form-control" %>
     </div>
     <br>
     <div class="form-group ">
           <%= submit_tag "Poster le commentaire", class: 'btn btn-secondary btn-lg btn-submit' %>
     </div>
     <% end %>
     </div>
  </div>
  </div>


  </center>
