<br><br><br>

<center>
<div class="card bg-light" style="width: 30rem;"  >
<div class="card-body">

<h4><p>Connexion</p></h4>
<br>

<div class="container col-md-8 order-md-1" >
  <%= form_tag url_for(action: 'create'), method: "post" do %>
     <div class="form-group" >
           <%= label_tag 'Email' %>
           <%= text_field_tag 'email', @email, class: "form-control "  %>
     </div>
     <div class="form ">
           <%= label_tag 'Mot de passe' %>
           <%= text_field_tag 'password', @password, class: "form-control" %>
     </div>
     <br>
     <div class="form-group ">
           <%= submit_tag "Connexion", class: 'btn btn-secondary btn-lg btn-submit' %>
     </div>
     <% end %>
     </div>
  </div>
  </div>


  </center>
